{{=<% %>=}}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ .Release.Namespace }}-agent-<% taskId %>
  namespace: {{ .Release.Namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{ .Release.Namespace }}-agent-<% taskId %>
  template:
    metadata:
      labels:
        app: {{ .Release.Namespace }}-agent-<% taskId %>
    spec:
      imagePullSecrets:
        - name: ecr-pull-secret
      containers:
        - args:
            - "--apiserver"
            - "{{ .Values.endpoint.apiserver }}"
            - "--notifier"
            - "{{ .Values.endpoint.notifier }}"
            {{ if .Values.insecure }}
            - "--insecure"
            {{ end }}
          command: ["/usr/bin/flamelet"]
          image: <% imageLoc %>
          imagePullPolicy: Always
          name: {{ .Release.Namespace }}-agent-<% taskId %>

          ports:
            - containerPort: {{ .Values.servicePort.agent }}

          resources:
            #limits:
              #memory: 2Gi
            requests:
              memory: 500Mi

          env:
            - name: LOG_LEVEL
              value: DEBUG
            - name: FLAME_TASK_ID
              value: <% taskId %>
            - name: FLAME_TASK_KEY
              value: <% taskKey %>
            {{ if ne .Values.s3Endpointurl "" }}
            - name: MLFLOW_S3_ENDPOINT_URL
              value: {{ .Values.s3EndpointUrl }}
            {{ end }}
            - name: AWS_ACCESS_KEY_ID
              value: {{ .Values.accessKeyId }}
            - name: AWS_SECRET_ACCESS_KEY
              value: {{ .Values.secretAccessKey }}
      restartPolicy: Never
<%={{ }}=%>
